@page
@model IndividualAccount.Pages.Admin.Users.EditModel

<h2>Gestione Ruoli Utenti</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome Utente</th>
            <th>Email</th>
            <th>Ruolo Attuale</th>
            <th>Nuovo Ruolo</th>
            <th>Azione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.Role ?? "Nessun Ruolo")</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="newRole" class="form-control">
                            <option value="NormalUser">Utente Normale</option>
                            <option value="Admin">Admin</option>
                        </select>
                
                        <button type="submit" class="btn btn-primary">Cambia Ruolo</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>