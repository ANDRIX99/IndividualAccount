@page
@model IndividualAccount.Pages.VersioneDistintaBase.CreateModel

<h2>Create new item version</h2>
<form method="post">
	<div class="form-group" >
		<label for="Versione"></label>
		<input type="number" asp-for="@Model.VersioneDistintaBase.Versione" class="form-control" />
	</div>
	<div class="form-group" >
		<select asp-for="@Model.VersioneDistintaBase.IdProduct">
			<option value="">Select a product</option>
			@foreach (var product in Model.Items)
			{
				<option value="@product.Id">@product.Name</option>
			}
		</select>
	</div>

	<button type="submit" class="btn btn-success">Save</button>
	<a asp-page="Index" class="btn btn-secondary">Abort</a>
</form>