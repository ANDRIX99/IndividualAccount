@page
@model IndividualAccount.Pages.Item.EditModel

<h2>Edit item</h2>

<form method="post">
    <input type="hidden" asp-for="Item.Id" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Item.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Item.Description" class="form-control"></textarea>
    </div>

    @if (Model.IsAdmin)
    {
        <div class="form-group">
            <label>IsDeleted</label>
            <input type="checkbox" asp-for="Item.IsDeleted" />
        </div>
    }

    <button type="submit" class="btn btn-success">Save changes</button>
    <a asp-page="Index" class="btn btn-secondary">Abort</a>
</form>