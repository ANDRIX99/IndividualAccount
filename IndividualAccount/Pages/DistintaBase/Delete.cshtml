@page
@model IndividualAccount.Pages.DistintaBase.DeleteModel

<h2>Delete distinta base</h2>

<div>
	<h4>DistintaBase detail</h4>
	<hr />
	<dl class="row">

		<dt class="col-sm-2">Nome: </dt>
		<dd class="col-sm-10">@Model.Item.Name</dd>

		<dt class="col-sm-2">Versione: </dt>
		<dd class="col-sm-10">@Model.VersioneDistintaBase</dd>

		<dt class="col-sm-2">Quantità: </dt>
		<dd class="col-sm-10">@Model.DistintaBase.Quantita</dd>

		<dt class="col-sm-2">Created at:</dt>
		<dd class="col-sm-10">@Model.DistintaBase.CreatedAt</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="DistintaBase.Id" />
		<button type="submit" class="btn btn-danger">Conferma Eliminazione</button>
		<a asp-page="Index" class="btn btn-secondary">Annulla</a>
	</form>
</div>